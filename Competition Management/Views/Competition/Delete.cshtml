@model Competition_Management.Models.Competition

@{
    ViewData["Title"] = "Delete";
}

<style>
    .image-container {
        width: 150px;
        height: 150px;
        overflow: hidden;
    }

        .image-container img {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

    .info-card {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 20px;
    }

        .info-card img {
            max-width: 100%;
            border-radius: 5px;
        }

        .info-card h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .info-card dl dt {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .info-card dl dd {
            margin-left: 0;
        }

    .btn-group {
        margin-top: 20px;
    }

        .btn-group .btn {
            margin-right: 10px;
        }

    .back-button {
        margin-top: 10px;
    }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this competition?</h3>

<div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container">
        <a href="#" class="navbar-brand d-flex align-items-center">
            @if (Model.Logo != null)
            {
                <div class="image-container">
                    <img src="data:image;base64, @Convert.ToBase64String(Model.Logo)" alt="Photo" class="img-fluid" />
                </div>
            }



            <strong style="margin-left:25px">@Model.CompetitionName</strong>
        </a>
    </div>
</div>

<div>

    <div class="info-card">
        <dl class="row">
            <dt class="col-sm-4">Start Date:</dt>
            <dd class="col-sm-8">@Model.StartDate.GetValueOrDefault().ToString("dd-MM-yyyy")</dd>
            <dt class="col-sm-4">End Date:</dt>
            <dd class="col-sm-8">@Model.EndDate.GetValueOrDefault().ToString("dd-MM-yyyy")</dd>
            <dt class="col-sm-4">Location:</dt>
            <dd class="col-sm-8">@Model.Location</dd>
            <dt class="col-sm-4">Competition Type:</dt>
            <dd class="col-sm-8">@Model.CompetitionTypeNavigation.TipName</dd>
        </dl>
    </div>

    <div class="btn-group">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
