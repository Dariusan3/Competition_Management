@model IEnumerable<Competition_Management.ViewModels.TeamScore>

@{
    ViewData["Title"] = "Clasament";
}
<link href="/css/clasament.css" rel="stylesheet" />


<h1 class="display-4">Clasament - @ViewData["CompetitionName"]</h1>

<body>
   
<table class="table table-striped table-hover">
    <thead>
        <tr class="thead-dark">
            <th class="center">
                    Position
            </th>
            <th class="long">
                Team
            </th>
            <th>
                Victories
            </th>
            <th>
                Draws
            </th>
            <th>
                Loses
            </th>
            <th class="short">
                GoalAverage
            </th>
            <th class="short">
                Points
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var teamScore in Model.Select((team, index) => new { Team = team, Index = index + 1 }))
            {
                <tr>
                    <td class="center">
                        @teamScore.Index
                    </td>
                    <td class="long">@Html.DisplayFor(modelItem => teamScore.Team.team.TeamName)</td>
                    <td>
                        @Html.DisplayFor(modelItem => teamScore.Team.Victorii)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => teamScore.Team.Egaluri)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => teamScore.Team.Infrangeri)
                    </td>
                    <td class="short">
                        @Html.DisplayFor(modelItem => teamScore.Team.Golaveraj)
                    </td>
                    <td class="short">
                        @Html.DisplayFor(modelItem => teamScore.Team.Points)
                    </td>
                </tr>
            }
    </tbody>
    
</table>
</body>
