@model Competition_Management.Models.Competition

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <h4 style="display: flex; align-items: center">
        <span style="margin-right: 40px;">Competition</span>
        @if (Model.Logo != null)
        {
            <img src="data:image;base64, @Convert.ToBase64String(Model.Logo)" alt="Logo" style="height: 100px" />
        }
    </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompetitionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionTypeNavigation.TipName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompetitionTypeNavigation.TipName)
        </dd>
    </dl>
</div>

<h2>Games</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Games.First().Team1Goals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games.First().Team2Goals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games.First().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games.First().Stadium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games.First().Competition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games.First().Team1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games.First().Team2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Games)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Team1Goals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team2Goals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stadium)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Competition.CompetitionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team1.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team2.TeamName)
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
