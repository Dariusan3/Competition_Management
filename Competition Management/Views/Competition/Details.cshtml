    <header data-bs-theme="dark">
        <div class="collapse text-bg-dark" id="navbarHeader">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-md-7 py-2">
                        <h4>Details of the Team</h4>
                        <p style="font-size:18px">
                            @Model.CompetitionName starts on @Model.StartDate.GetValueOrDefault().Date.ToString("dd-MM-yyyy") and finishes on @Model.EndDate.GetValueOrDefault().Date.ToString("dd-MM-yyyy").
                            <br />
                             In this competition participate @Model.Teams.Count() teams. You can see the games down in the presentation.
                        </p>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a href="#" class="navbar-brand d-flex align-items-center">
                    @if (Model.Logo != null)
                    {
                        <div class="image-container">
                            <img src="data:image;base64, @Convert.ToBase64String(Model.Logo)" alt="Photo" class="img-fluid" />
                        </div>
                    }



                    <h3 style="margin-left:25px">@Model.CompetitionName</h3>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </header>

    <main>

        <section class="py-1 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">@Model.CompetitionName</h1>
                    <p class="lead text-body-secondary">The wait is over the competition has begun</p>
                    <p>
                        <form asp-action="GenerateGames" asp-controller="Competition" asp-route-id="@Model.Id">
                            <div class="form-group">
                                <input type="submit" value="Generate Games" class="btn btn-primary" />
                            </div>
                        </form>
                        <a asp-action="Index" asp-controller="Competition" class="btn btn-secondary my-2">Go to competitions</a>
                    </p>
                </div>
            </div>
        </section>
        <h3 style="padding-bottom:20px">The games that are played</h3>
        @if(Model.Games.Count() > 0)
        {
            @foreach (var game in Model.Games)
            {
                <div class="game-card">
                    <div class="col-md-3">
                        @if (game.Team1.Sigla != null)
                        {
                            <div class="team-logo-container">
                                <img src="data:image;base64, @Convert.ToBase64String(game.Team1.Sigla)" alt="Team Logo" class="team-logo" />
                            </div>
                        }
                        else
                        {
                            <img src="~/images/no_photo_team.jpg" alt="Photo" class="team-logo" />
                        }
                        <h4>@game.Team1.TeamName</h4>

                    </div>
                    <div class="col-md-3">
                        @if (game.Team1Goals != null && game.Team2Goals != null)
                        {
                            <h3 class="text-center">@game.Team1Goals - @game.Team2Goals</h3>
                        }
                        else
                        {
                            <form asp-controller="Competition" asp-action="SetScores" asp-route-id="@Model.Id" asp-route-id="@game.Id">
                                <div class="form-group">
                                    <label for="@game.Team1Goals">Team 1 Goals</label>
                                    <input type="number" class="form-control" id="Team1Goals" name="Team1Goals" />
                                </div>
                                <div class="form-group">
                                    <label for="@game.Team2Goals">Team 2 Goals</label>
                                    <input type="number" class="form-control" id="Team2Goals" name="Team2Goals" />
                                </div>
                                <button type="submit" class="btn btn-primary">Add Scores</button>
                            </form>

                        }

                    </div>
                    <div class="col-md-3">
                        @if (game.Team2.Sigla != null)
                        {
                            <div class="team-logo-container">
                                <img src="data:image;base64, @Convert.ToBase64String(game.Team2.Sigla)" alt="Team Logo" class="team-logo" />
                            </div>
                        }
                        else
                        {
                            <img src="~/images/no_photo_team.jpg" alt="Photo" class="team-logo" />
                        }
                        <h4>@game.Team2.TeamName</h4>
                    </div>
                    <div class="col-md-2 text-center">
                        <p>@game.Date.GetValueOrDefault().Date.ToString("dd-MM-yyyy")</p>
                        <p>@game.Stadium</p>
                    </div>
                    @*<div class="col-md-1">
            <a asp-controller="Game" asp-action="Edit" asp-route-id="@game.Id" class="btn btn-info">Edit Scores</a>
            </div>*@

                </div>
            }
        }
        else
        {
            <h3>No games have been played</h3>
        }


    </main>

