@model Competition_Management.Models.Player

@{
    ViewData["Title"] = "Delete";
}

<link href="/css/player_details.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<h1>Delete</h1>

<h3>Are you sure you want to delete this player?</h3>


<div class="player-details-container">
    @if (Model.Photo != null)
    {
        <img src="data:image;base64, @Convert.ToBase64String(Model.Photo)" alt="Photo" class="img-fluid" style="padding:5px"/>
    }
    else
    {
        <img src="~/images/nophoto.jpg" alt="Photo" class="img-fluid" style="padding:5px"/>
    }

    <div>
        <h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
        <p>@(Model.Team != null ? Html.DisplayFor(modelItem => modelItem.Team.TeamName) : "Free Contract")</p>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Last Name</h5>
                <p class="card-text">@Html.DisplayFor(model => model.LastName)</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">First Name</h5>
                <p class="card-text">@Html.DisplayFor(model => model.FirstName)</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Age</h5>
                <p class="card-text">@Html.DisplayFor(model => model.Age)</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Team</h5>
                <p class="card-text">@(Model.Team != null ? Html.DisplayFor(modelItem => modelItem.Team.TeamName) : "Free Contract")</p>
            </div>
        </div>
    </div>
    <!-- Add more cards for other details if needed -->
</div>
<div class="btn-group">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>