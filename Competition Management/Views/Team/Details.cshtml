@model Competition_Management.Models.Team

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AwardNr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AwardNr)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Motto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Motto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedOn.GetValueOrDefault().Date.ToString("yyyy-MM-dd")
        </dd>
    </dl>
</div>



<h2>
    Players in @Html.DisplayFor(model => model.TeamName)
</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Players.First().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players.First().Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players.First().Team)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Players)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team.TeamName)
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
