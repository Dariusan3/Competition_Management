@model IEnumerable<Competition_Management.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<link href="/css/team_index.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6v8B8s1fek8LGp8gYU4lGJqbsb4MN" crossorigin="anonymous">

<h1>Index</h1>

<p style="padding-bottom:10px">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>


<body>
    <div class="teams-container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="competition-card">
                        <div class="team-header">
                            @if (item.Sigla != null)
                            {
                                <img src="data:image;base64, @Convert.ToBase64String(item.Sigla)" class="card-img-top competition-logo" alt="Logo" />
                            }
                            <h5 class="team-name">@item.TeamName</h5>
                        </div>
                        <div class="card-body">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>